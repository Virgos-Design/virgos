---
import { Picture } from "@astrojs/image/components";

export interface Props {
  imageSrc: string;
	alt: string;
}

const { imageSrc, imageAlt } = Astro.props;

const widths = [450, 800, 1200];
const sizes = "100vw";
---

<Picture
  class="object-cover w-full h-full"
  src={imageSrc}
  widths={widths}
  sizes={sizes}
	alt={imageAlt}
/>
