---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/IndexLayout.astro';

import Hero from '~/sections/Hero.astro';
import Features from '~/sections/Features.astro';
import Features2 from '~/sections/Features2.astro';
import Steps from '~/sections/Steps.astro';
import Features3 from '~/sections/Features3.astro';
import HighlightedPosts from '~/components/blog/HighlightedPosts.astro';
import FAQs from '~/sections/FAQs.astro';
import Stats from '~/sections/Stats.astro';
import CallToAction from '~/sections/CallToAction.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<Hero slot="hero"/>
	<Features />
	<Steps />
	<Features2 />
	<Features3 />
	<HighlightedPosts />
	<FAQs />
	<Stats />
	<CallToAction />
</Layout>
